GMAT DefaultSC.Cd = 0.0;
GMAT DefaultSC.Cd = 1.0;
GMAT DefaultSC.Cd = 1;
GMAT DefaultSC.Cd = testVar;
GMAT DefaultSC.Cd = testString;
GMAT DefaultSC.Cd = testArray(1,1);

