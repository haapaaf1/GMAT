% ------------------------------------------------
% Test validation scripts for Spacecraft-Ballistic
% ------------------------------------------------
Create Spacecraft DefaultSC;

Create Variable testVar;
GMAT testVar.Expression = -3;
Create String testString;
GMAT testString.Expression = TEST;
Create Array testArray[2, 2];
GMAT testArray.Expression = testArray;
GMAT testArray(1, 1) = -4;

% --------
% Dry Mass
% --------
GMAT DefaultSC.DryMass = DoesNotExist;
GMAT DefaultSC.DryMass = -1.0;
GMAT DefaultSC.DryMass = 0.0;
GMAT DefaultSC.DryMass = 1.0;
GMAT DefaultSC.DryMass = 1;
GMAT DefaultSC.DryMass = testVar;
GMAT DefaultSC.DryMass = testString;
GMAT DefaultSC.DryMass = testArray(1,1);

% --
% Cd
% --
GMAT DefaultSC.Cd = DoesNotExist;
